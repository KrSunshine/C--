import pygame
import os
pygame.init()

#title name
pygame.display.set_caption("My Game")

#screen

WIDTH = 1200
HEIGHT = 650
BORDER = 10
VELOCITY = 4

screen = pygame.display.set_mode((WIDTH,HEIGHT))
screen.fill(pygame.Color("black"))

class Player2: #shooter only moves up and down on y coordinate
    
    WIDTH = 45
    HEIGHT = 60
    
    def __init__(self,y):
        self.y = y
        
     def show(self, colour):
        global screen
        POSX = WIDTH-(BORDER+WIDTH//240)-self.WIDTH
        POSY = self.y-self.HEIGHT//2
        pygame.draw.rect(screen, colour, pygame.Rect(POSX, POSY, self.WIDTH, self.HEIGHT))
        
    def update(self):
        keys = pygame.key.get_pressed()
        if keys[pygame.K_DOWN]:
            Player2.show.POSY += VELOCITY 
            
player2 = Player2(HEIGHT//2)
player2.show(pygame.Color("white"))

#framerate
#FPS = 40
#clock = pygame.time.Clock()

while True:
    e = pygame.event.poll()
    if e.type == pygame.QUIT:
        break
    #clock.tick(FPS)
    player2.update()
    pygame.display.flip()
pygame.quit() #to be able to press exit
os._exit(0) #MAC
