import pygame
import os
pygame.init()

#title name
pygame.display.set_caption("My Game")

#screen

WIDTH = 1200
HEIGHT = 650
BORDER = 10
VELOCITY = 4

screen = pygame.display.set_mode((WIDTH,HEIGHT))
screen.fill(pygame.Color("black"))

class Player2: #shooter only moves up and down on y coordinate
    
    WIDTH = 45
    HEIGHT = 60
    
    def __init__(self,y):
        self.y = y
        
    def show(self, colour):
        global screen
        pygame.draw.rect(screen, colour, pygame.Rect(WIDTH-(BORDER+WIDTH//240)-self.WIDTH, self.y-self.HEIGHT//2, self.WIDTH, self.HEIGHT))
    
    def update(self):
        self.speedx = 0
        keystate = pygame.key.get_pressed()
        if keystate[pygame.K_LEFT]:
            self.speedx = -8
        if keystate[pygame.K_RIGHT]:
            self.speedx = 8
        self.rect.x += self.speedx
        if self.rect.right > WIDTH:
            self.rect.right = WIDTH
        if self.rect.left < 0:
            self.rect.left = 0
            
player2 = Player2(HEIGHT//2)
player2.show(pygame.Color("white"))

#framerate
#FPS = 40
#clock = pygame.time.Clock()

while True:
    e = pygame.event.poll()
    if e.type == pygame.QUIT:
        break
    #clock.tick(FPS)
    player2.update()
    pygame.display.flip()
pygame.quit() #to be able to press exit
os._exit(0) #MAC
